/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/spec",
    "types": [
      "jest",
      "node"
    ],

    "emitDecoratorMetadata": true  //because of this i have not included this one i.e. dependency injection were failing
    //https://stackoverflow.com/questions/48085904/angular-dependency-injection-injectable-fails-in-test-while-inject-work
  },
  "files": [
    "src/test.ts",
    "src/polyfills.ts"
  ],
  "include": [
    "src/**/*.spec.ts",
    "src/**/*.d.ts"
  ]
}
